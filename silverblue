#!/usr/bin/env bash
cd "$(dirname "${0}")"

#
#     /$$$$$$  /$$ /$$                               /$$       /$$                    
#    /$$__  $$|__/| $$                              | $$      | $$                    
#   | $$  \__/ /$$| $$ /$$    /$$ /$$$$$$   /$$$$$$ | $$$$$$$ | $$ /$$   /$$  /$$$$$$ 
#   |  $$$$$$ | $$| $$|  $$  /$$//$$__  $$ /$$__  $$| $$__  $$| $$| $$  | $$ /$$__  $$
#    \____  $$| $$| $$ \  $$/$$/| $$$$$$$$| $$  \__/| $$  \ $$| $$| $$  | $$| $$$$$$$$
#    /$$  \ $$| $$| $$  \  $$$/ | $$_____/| $$      | $$  | $$| $$| $$  | $$| $$_____/
#   |  $$$$$$/| $$| $$   \  $/  |  $$$$$$$| $$      | $$$$$$$/| $$|  $$$$$$/|  $$$$$$$
#    \______/ |__/|__/    \_/    \_______/|__/      |_______/ |__/ \______/  \_______/
#                                                                                     

ask(){
	echo "1 : Upgrade"
	echo "2 : Add Personal RO Layer"
	echo "3 : Install Packages"
	echo -n "> "
	read selection
	case $selection in

        1 )
            rpm-ostree upgrade
            restart
			;;
        2 )
            rpm-ostree install \
                bat exa fd-find fzf ripgrep stow tldr \
                zsh zsh-autosuggestions zsh-syntax-highlighting starship \
                neovim \
                gnome-tweaks \
                gnome-shell-extension-pop-shell xprop
            restart
			;;

        3 ) 
            install_base_packages
            source ./shared/sshkeys
            source ./shared/gitclones
            source ./shared/gnome
            source ./shared/flathub
            ;;

		*) echo "Invalid input"
		    ;;
	esac
}

install_base_packages(){
    # set zsh as default shell
    sudo usermod -s $(which zsh) $USERNAME
    echo "logout to get shell change"
}

ask
