#!/usr/bin/env bash
cd "$(dirname "${0}")"

#
#     /$$$$$$  /$$ /$$                               /$$       /$$                    
#    /$$__  $$|__/| $$                              | $$      | $$                    
#   | $$  \__/ /$$| $$ /$$    /$$ /$$$$$$   /$$$$$$ | $$$$$$$ | $$ /$$   /$$  /$$$$$$ 
#   |  $$$$$$ | $$| $$|  $$  /$$//$$__  $$ /$$__  $$| $$__  $$| $$| $$  | $$ /$$__  $$
#    \____  $$| $$| $$ \  $$/$$/| $$$$$$$$| $$  \__/| $$  \ $$| $$| $$  | $$| $$$$$$$$
#    /$$  \ $$| $$| $$  \  $$$/ | $$_____/| $$      | $$  | $$| $$| $$  | $$| $$_____/
#   |  $$$$$$/| $$| $$   \  $/  |  $$$$$$$| $$      | $$$$$$$/| $$|  $$$$$$/|  $$$$$$$
#    \______/ |__/|__/    \_/    \_______/|__/      |_______/ |__/ \______/  \_______/
#                                                                                     

ask(){
  echo "1 : Upgrade Base"
  echo "2 : Toolbox Install"
  echo -n "> "
  read selection
  case $selection in

    1 )
      sudo rpm-ostree upgrade
      systemctl restart
      ;;

    2 )
      source ./shared/sshkeys
      source ./shared/gitclones
      source ./shared/gnome
      source ./shared/flathub
      
      for file in ./toolboxes/*.
      do
        ./"$file"
      done
      
      ;;

    *) 
      echo "Invalid input"
      ;;
  esac
}

ask
